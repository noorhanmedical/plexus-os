{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "server",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "server"
  ],
  "exclude": [
    "client/**",
    "dist/**",
    "server/localData.ts",
    "server/vite.ts"
  ]
}