{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": [
    "client/**",
    "dist/**",
    "server/vite.ts",
    "**/*.config.ts"
  ]
}
